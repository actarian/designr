{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"module": "es2015",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es5",
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2018", "dom"],
		"types": ["node"],
		"paths": {
			"@designr/control": ["dist/designr/control"],
			"@designr/control/*": ["dist/designr/control/*"],
			"@designr/core": ["dist/designr/core"],
			"@designr/core/*": ["dist/designr/core/*"],
			"@designr/data": ["dist/designr/data"],
			"@designr/data/*": ["dist/designr/data/*"],
			"@designr/editor": ["dist/designr/editor"],
			"@designr/editor/*": ["dist/designr/editor/*"],
			"@designr/page": ["dist/designr/page"],
			"@designr/page/*": ["dist/designr/page/*"],
			"@designr/plugins": ["dist/designr/plugins"],
			"@designr/plugins/*": ["dist/designr/plugins/*"],
			"@designr/section": ["dist/designr/section"],
			"@designr/section/*": ["dist/designr/section/*"],
			"@designr/ui": ["dist/designr/ui"],
			"@designr/ui/*": ["dist/designr/ui/*"]
		}
	},
	"exclude": ["node_modules"],
}
